# ILM Red API Environment Variables
# Copy this file to .env and fill in your values

# Application
ENVIRONMENT=development
DEBUG=true

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ilmred

# Redis
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Storage
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=./uploads

# Azure Storage (for production)
# AZURE_STORAGE_CONNECTION_STRING=your-connection-string
# AZURE_STORAGE_CONTAINER=books

# AI Providers (Multi-vendor support)
# At minimum, configure OPENAI_API_KEY or QWEN_API_KEY
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
QWEN_API_KEY=your-qwen-api-key
GOOGLE_API_KEY=your-google-api-key
XAI_API_KEY=your-xai-api-key
DEEPSEEK_API_KEY=your-deepseek-api-key

# AI Model Defaults
# Public books use cost-effective model (qwen-turbo)
# Private books use user's preferred model (default: gpt-4o-mini)
AI_DEFAULT_MODEL_PUBLIC=qwen-turbo
AI_DEFAULT_MODEL_PRIVATE=gpt-4o-mini
AI_FALLBACK_MODEL=gpt-4o-mini

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
