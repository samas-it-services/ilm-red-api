{
  "name": "ilm-red-api",
  "version": "1.0.0",
  "description": "Cloud-native, vendor-agnostic API platform for digital knowledge management",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:unit": "vitest run --dir tests/unit",
    "test:int": "vitest run --dir tests/integration",
    "test:e2e": "vitest run --dir tests/e2e",
    "test:cov": "vitest run --coverage",
    "mock": "prism mock openapi/api-v1.yaml -p 4010 --cors",
    "mock:dynamic": "prism mock openapi/api-v1.yaml -p 4010 --dynamic --cors",
    "mock:json-server": "json-server mock/db.json --routes mock/routes.json --port 4011",
    "transform:data": "node scripts/transform-data.js",
    "db:migrate": "echo 'Migration not implemented'",
    "db:seed": "echo 'Seeding not implemented'"
  },
  "keywords": [
    "api",
    "books",
    "knowledge-management",
    "cloud-native"
  ],
  "author": "",
  "license": "Apache-2.0",
  "devDependencies": {
    "@stoplight/prism-cli": "^5.0.0",
    "@types/node": "^20.0.0",
    "eslint": "^8.0.0",
    "json-server": "^0.17.4",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "fastify": "^4.0.0",
    "zod": "^3.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
